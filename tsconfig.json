{
  "compilerOptions": {
    "strict": true,
    "moduleResolution": "node",
    "target": "ESNext",
    "lib": [
      "ESNext"
    ],
    "declaration": true,
    "removeComments": true,
    "alwaysStrict": true,
    "pretty": true,
    "importHelpers": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "outDir": "build",
    "allowSyntheticDefaultImports": true,
    "skipDefaultLibCheck": true,
    "resolveJsonModule": true
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules"]
}
